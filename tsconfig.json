{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2018",
    "lib": ["dom", "es2018"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "tests",
    "umd",
    "demo",
    "umd.js",
    "nwb.config.js",
    "nwb.demo.config.js"
  ]
}
